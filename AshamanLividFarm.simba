              failsafe;

          result := waitFunc(@LividMenu,100,(randomRange(2500, 4000)));
          if result then
          begin
            SetLength(ATPA,0);
            Exit;
          end;
        End;
      End;
      SetLength(TPA,0);
    End;
  End;
  SetLength(ATPA,0);
